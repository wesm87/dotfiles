{
  "search.exclude": {
    "**/libs/z": true,
    "**/libs/tmux-plugins/tpm": true,
    "**/oh-my-zsh/custom/plugins/zsh-autosuggestions": true,
    "**/oh-my-zsh/custom/plugins/zsh-syntax-highlighting": true
  },
  "editor.formatOnSave": true,
  "conventionalCommits.scopes": [
    "bin",
    "config",
    "completions",
    "exports",
    "functions",
    "installers",
    "libs",
    "oh-my-zsh",
    "tilde",
    "aliases"
  ],
  "shellcheck.customArgs": ["-x"],
  "shellcheck.useWorkspaceRootAsCwd": true,
  "eslint.format.enable": true,
  "ruby.interpreter.commandPath": "~/.rvm/rubies/ruby-2.7.0/bin/",
  "ruby.pathToBundler": "~/.rvm/rubies/ruby-2.7.0/bin/bundle",
  "ruby.format": "rubocop",
  "ruby.intellisense": "rubyLocate",
  "ruby.codeCompletion": "rcodetools",
  "ruby.rctComplete.commandPath": "~/.rvm/gems/ruby-2.7.0/bin/rct-complete",
  "ruby.useLanguageServer": true,
  "ruby.useBundler": true,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
    }
  },
  "solargraph.completion": true,
  "solargraph.definitions": true,
  "solargraph.references": true,
  "solargraph.formatting": true,
  "solargraph.useBundler": true,
  "python.pythonPath": "~/.pyenv/versions/3.9.2/bin/python",
  "[markdown]": {
    "editor.wordWrap": "on"
  },
  "[ruby]": {
    "editor.defaultFormatter": "rebornix.ruby"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
