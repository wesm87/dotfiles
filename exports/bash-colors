#!/usr/bin/env bash

DULL=0
BRIGHT=1

BG_NULL=00

FG_BLACK=30
FG_RED=31
FG_GREEN=32
FG_YELLOW=33
FG_BLUE=34
FG_VIOLET=35
FG_CYAN=36
FG_WHITE=37

##
# ANSI Escape Commands
##
export ANSI_ESC="\033"
export ANSI_NORMAL="${ANSI_ESC}[m"
export ANSI_RESET="${ANSI_ESC}[${DULL};${FG_WHITE};${BG_NULL}m"

# NORMAL TEXT
export ANSI_BLACK="${ANSI_ESC}[${DULL};${FG_BLACK}m"
export ANSI_RED="${ANSI_ESC}[${DULL};${FG_RED}m"
export ANSI_GREEN="${ANSI_ESC}[${DULL};${FG_GREEN}m"
export ANSI_YELLOW="${ANSI_ESC}[${DULL};${FG_YELLOW}m"
export ANSI_BLUE="${ANSI_ESC}[${DULL};${FG_BLUE}m"
export ANSI_VIOLET="${ANSI_ESC}[${DULL};${FG_VIOLET}m"
export ANSI_CYAN="${ANSI_ESC}[${DULL};${FG_CYAN}m"
export ANSI_WHITE="${ANSI_ESC}[${DULL};${FG_WHITE}m"

# BRIGHT TEXT
export ANSI_BRIGHT_BLACK="${ANSI_ESC}[${BRIGHT};${FG_BLACK}m"
export ANSI_BRIGHT_RED="${ANSI_ESC}[${BRIGHT};${FG_RED}m"
export ANSI_BRIGHT_GREEN="${ANSI_ESC}[${BRIGHT};${FG_GREEN}m"
export ANSI_BRIGHT_YELLOW="${ANSI_ESC}[${BRIGHT};${FG_YELLOW}m"
export ANSI_BRIGHT_BLUE="${ANSI_ESC}[${BRIGHT};${FG_BLUE}m"
export ANSI_BRIGHT_VIOLET="${ANSI_ESC}[${BRIGHT};${FG_VIOLET}m"
export ANSI_BRIGHT_CYAN="${ANSI_ESC}[${BRIGHT};${FG_CYAN}m"
export ANSI_BRIGHT_WHITE="${ANSI_ESC}[${BRIGHT};${FG_WHITE}m"
