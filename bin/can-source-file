#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

# Returns true if the specified path is either a file or a link to a file,
# AND is readable by the current user, AND is not empty.
function __dotfiles_can_source_file() {
  [ -f "$1" ] && [ -r "$1" ] && [ -s "$1" ]
}

__dotfiles_can_source_file "$@"
