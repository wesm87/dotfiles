#!/usr/bin/env ruby
# frozen_string_literal: true

def slugify(str)
  str.strip
    .gsub(/[^a-zA-Z0-9]+/, '-')
    .gsub(/[^a-zA-Z0-9]+$/, '')
    .gsub(/^[^a-zA-Z0-9]+/, '')
    .downcase
end

def puts_each_slugified(items)
  items.each do |item|
    puts slugify item
  end
end

if ARGV.any?
  puts_each_slugified ARGV
else
  puts_each_slugified $stdin.readlines
end
