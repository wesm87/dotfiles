#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

shopt -s globstar

function __dotfiles_rename_file_extensions() {
  local old_extension="${1}"
  local new_extension="${2}"
  local target_dir="${3:-.}"

  for file in "$target_dir"/**/*."$old_extension"; do
    mv "$file" "${file%.${old_extension}}.${new_extension}"
  done
}

__dotfiles_rename_file_extensions "$@"
