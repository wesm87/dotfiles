#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

function __dotfiles_git_wtf_log() {
  local text="${1:-}"

  git log --graph --pretty=short -1 "$text"
  echo
}

function __dotfiles_git_wtf() {
  local ref="${1:-HEAD}"
  local old="$ref@{1}"
  local new="$ref"

  echo "Old revision:"
  __dotfiles_git_wtf_log "$old"

  echo "New revision:"
  __dotfiles_git_wtf_log "$new"

  echo "Changes:"
  git diff --stat --summary "$new" "$old"
}

__dotfiles_git_wtf "$@"
