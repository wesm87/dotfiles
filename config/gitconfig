[user]
  name  = Wes Moberly
  email = wesm87@gmail.com

[core]
  excludesfile = ~/.dotfiles/config/gitignore
  editor       = vim

[credential]
  helper = osxkeychain

[push]
  default = simple

[filter "lfs"]
  required = true
  clean    = git-lfs clean %f
  smudge   = git-lfs smudge %f

[color]
  ui = auto

[merge]
  tool = vimdiff

[alias]
  s         = status
  f         = fetch
  p         = pull
  b         = branch
  branches  = branch --all
  remotes   = remote -v
  m         = merge
  c         = commit --verbose
  cm        = commit --verbose -m
  co        = checkout
  cob       = checkout -b
  d         = diff
  dc        = diff --cached
  amend     = commit --amend
  un-commit = reset --mixed HEAD~
  re-commit = commit --amend -C HEAD
  un-stage  = reset HEAD --
  aa        = add --all
  ff        = merge --ff-only
  pullff    = pull --ff-only
  noff      = merge --no-ff
  fa        = fetch --all
  pom       = push origin master
  undo-push = push -f origin HEAD^:master
  ds        = diff --stat=160,120
  dh1       = diff HEAD~1
  conflicts = diff --name-status --diff-filter=U
  detach    = checkout --detach
  discard   = checkout --

  # Divergence (commits we added and commits remote added)
  div = divergence

  # Goodness (summary of diff lines added/removed/total)
  gn  = goodness
  gnc = goodness --cached

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git r -1
  h    = !git head
  hp   = "!. ~/.dotfiles/libs/git-helpers && show_git_head"
  r    = !GIT_NO_PAGER=1 git l -30
  ra   = !git r --all
  l    = "!. ~/.dotfiles/libs/git-helpers && pretty_git_log"
  la   = !git l --all

  # Open any files with merge conflicts in vim (or your preferred editor)
  view-conflicts = "!f() { git diff --name-only --diff-filter=U | xargs `git config alias-config.viewer`; }; f"

  # Add a `.keep` file inside the specified directory.
  # Useful for ignoring files in a directory but not the directory itself.
  keep = "!f() { touch ${1%/}/.keep; }; f"

  # Add a new entry to `.gitignore`
  ignore = "!f() { touch .gitignore; printf %\"s\\n\" \"$@\" >> .gitignore; }; f"

[alias-config]
  viewer = vim
