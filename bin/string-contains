#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '_lib/simple_cli'
require_relative '_lib/utils'

cli = SimpleCLI.new(PARSE_ARG_MODE_INCLUSIVE)

needle, haystack = cli.positional
ignore_case = cli.flag('--ignore-case')
result = str_contains?(needle, haystack, ignore_case: ignore_case)

exit(result)
